<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <!-- this is logo -->
  <div class="d-flex">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "birdie.png" %>
    <% end %>
    <h3 class="logo">Golfriend</h3>
  </div>
  <!-- this is logo -->
  <div class="d-flex">
    <!-- this is All events -->
    <li class="nav-item">
      <%= link_to "All events", events_path, class: "nav-link" %></li>
    <!-- this is All events -->
    <!-- add an event -->
    <li class="nav-item">
      <%= link_to "Add an Event", new_event_path, class: "nav-white-link nav-link" %></li>
    <!-- add an event -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Events", my_events_path, class: "nav-white-link nav-link" %>
            <li class="nav-item dropdown">
              <% if @current_user.photo.present? %>
                <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle card-show-user avatar-bordered", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <p class="text-white"><%= current_user.first_name %> <%= current_user.last_name %></p>
              <% else %>
                <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <p class="text-white"><%= current_user.first_name %> <%= current_user.last_name %></p>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My Events", my_events_path, class: "dropdown-item" %>
                <%= link_to "Add an Event", new_event_path, class: "dropdown-item" %>
                <%= link_to "All events", events_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-white-link nav-link" %>
              <i class="fas fa-search"></i>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>