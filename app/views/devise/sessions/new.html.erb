<div class="container m-5">
  <div class="row">

    <!-- this is for grid -->
    <div class="col">
    </div>
    <!-- this is for grid -->

    <!-- this is MAIN grid -->
    <div class="col-6">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-big-flat" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <!-- this is MAIN grid -->

    <!-- this is for grid -->
    <div class="col">
    </div>
    <!-- this is for grid -->

  </div>
</div>
