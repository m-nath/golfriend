<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner.jpg" %>')">
  <div class="banner-flex">
      <div class="card-event">
    <div class="col">
      <div class="card-trip">
        <div class="card-trip-infos">
          <div>
            <h2>Event you signed up</h2>
            <p>Fuji Sakura Golf Club</p>
          </div>
            <a class="btn btn-ghost" href="#">Find event</a>
        </div>
      </div>
    </div>
    </div>
      <div>
      <div class="col">
        <div class="card-trip">
          <div class="card-trip-infos">
            <div>
              <h2>Event you are hosting</h2>
              <p>Fuji Sakura Golf Club</p>
            </div>
              <a class="btn btn-ghost" href="#">Create an event</a>
          </div>
        </div>
    </div>
      </div>
  </div>
</div>

<div class="container m-5">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

<div class="container m-5">
  <h3 class="mt-5 mb-3">Golf events you may like:  </h3>

  <div class="cards" >
    <% @events.each do |event| %>
      <div class="card-trip">
        <% if event.photo.present? %>
          <%= image_tag(event.photo) %>
        <% else %>
          <img src="https://images.pexels.com/photos/424725/pexels-photo-424725.jpeg?cs=srgb&dl=active-activity-adults-424725.jpg&fm=jpg" alt="online event">
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2 class="mb-2"><%= event.name %></h2>
            <p>Event date: <%= event.date %></p>
          </div>
          <%= link_to "Details", event_path(event), class: "btn btn-flat stretched-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>






