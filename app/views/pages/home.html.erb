<!-- here is the big banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner.jpg" %>')">
  <div class="banner-flex">
    <% if user_signed_in? %>
      <div class="col">
        <div class="card-event">
          <div class="card-event-infos">
            <div>
              <h2 class="mb-2">Next event you signed up</h2>
              <p><%= current_user.reserved_events.first.name %></p>
              <p><%= current_user.reservations.first.event.date%></p>
            </div>
            <%= link_to "Find event", my_events_path, class: "btn btn-ghost" %>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card-event">
          <div class="card-event-infos">
            <div>
              <h2 class="mb-2">Event you are hosting</h2>
              <p><%= current_user.events.first.name %></p>
              <p><%= current_user.events.first.date%></p>
            </div>
            <%= link_to "Create an event", new_event_path, class: "btn btn-ghost" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- here is search bar & map -->
<div class="container m-4 d-flex justify-content-between">
  <div style="width: 500px">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 500px;
    height: 250px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
<!--Here is cards list -->
<div class="container">
  <h3 class=" mb-3">Golf events you may like:  </h3>
  <div class="cards" >
    <% @events.each do |event| %>
      <div class="card-trip">
        <% if event.photo.present? %>
          <%= cl_image_tag(event.photo) %>
        <% else %>
          <img src="https://images.pexels.com/photos/424725/pexels-photo-424725.jpeg?cs=srgb&dl=active-activity-adults-424725.jpg&fm=jpg" alt="online event">
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2 class="mb-2"><%= event.name %></h2>
            <p>Event date: <%= event.date %></p>
          </div>
          <%= link_to "Details", event_path(event), class: "btn btn-flat stretched-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
